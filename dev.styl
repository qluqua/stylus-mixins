pixelperfect($image, $fixsize = false)
  position relative

  &::before
    content ''
    position absolute
    left 50%
    top 0
    margin-left image-size($image)[0] * -0.5
    imgbox $image
    z-index: 99999999
    opacity 0.5
    pointer-events none

  if ($fixsize)
    width image-size($image)[0]
    height image-size($image)[1]

debug()
  background-color rgba(red, .33) !important

outline()
  outline 3px solid rgba(red, .33) !important

ghost()
  position absolute
  top 0
  right 0
  bottom 0
  left 0

transition($property = transform\, opacity, $duration = 300ms, $function = cubic-bezier(0.260, 0.860, 0.440, 0.985))
  transition-property $property
  transition-duration $duration
  transition-timing-function $function
